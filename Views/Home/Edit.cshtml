
@model StudentCreateViewModels
@inject IStudentRepository _students

@{ ViewBag.Title = "编辑学生";
    ViewBag.Admin = ViewBag.AdminID;
    }

@* enctype="multipart/form-data" 用于文件上传 *@
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post" class="mt-3">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 mt-2">
            <input asp-for="Name" class="form-control" placeholder="请输入名称" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="StudentNo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 mt-2">
            <input asp-for="StudentNo" class="form-control" placeholder="请输入学号" />
            <span class="text-danger" asp-validation-for="StudentNo"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Adress" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 mt-2">
            <input asp-for="Adress" class="form-control" placeholder="请输入地址" />
            <span class="text-danger" asp-validation-for="Adress"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ClassName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 mt-2">
            <select asp-for="ClassName" asp-items="Html.GetEnumSelectList<ClassNameEnum>()" class="custom-select mr-sm-2">
                <option value="">请选择</option>
            </select>
            <span class="text-danger" asp-validation-for="ClassName"></span>
        </div>
    </div>


    <div class="form-group row">
        <span class="col-sm-10 mt-2 btnapn">
            <button type="submit" class="btn btn-primary">提交</button>
        </span>
        <span class="col-sm-10 mt-2 btnapn">
            <a asp-controller="home" asp-action="Index" class="btn btn-primary">返回首页</a>
        </span>
    </div>
</form>
